    <!-- 'Opt' Button to Reset/Reload the form -->
    <button class="opt-button" onclick="resetForm()">Reset Options</button>

    <!-- Submit Button to send the form data -->
    <button class="opt-button" onclick="submitForm()">Submit</button>

    <!-- Notice message -->
    <div id="notice"></div>

</body>
</html>

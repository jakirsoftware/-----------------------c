function doGet() {
  return HtmlService.createTemplateFromFile('index')
    .evaluate()
    .addMetaTag('viewport', 'width=device-width, initial-scale=1')
    .setXFrameOptionsMode(HtmlService.XFrameOptionsMode.ALLOWALL);
}

function saveInvoice(invoiceData) {
  let sheet = SpreadsheetApp.getActiveSpreadsheet().getSheetByName("Invoices");

  if (!sheet) {
    sheet = SpreadsheetApp.getActiveSpreadsheet().insertSheet("Invoices");
    sheet.appendRow(["Invoice Type", "Date", "Contact", "Invoice #", "Description", "Product", "Price", "Quantity", "Total"]);
  }

  let invoiceInfo = invoiceData.invoiceInfo;
  let products = invoiceData.products;

  products.forEach(product => {
    sheet.appendRow([
      invoiceInfo.invoiceType, // Invoice Type
      invoiceInfo.date,
      invoiceInfo.contact,
      invoiceInfo.invoiceNumber,
      invoiceInfo.description,
      product.productName,
      product.price,
      product.quantity,
      product.total
    ]);
  });

  return "Invoice Saved Successfully!";
}
